<h1>Edit Issue</h1>

<h1><%= "#{@issue.title}"%></h1>

<%= form_for :issue, url: issue_path(@issue), method: :patch do |f| %>

	<% if @issue.errors.any? %>
	    <ul>
	    <% @issue.errors.full_messages.each do |msg| %>
	      <li><%= msg %></li>
	    <% end %>
	    </ul>
	  </div>
	<% end %>
	<%= f.label :title, "Issue Title Name:" %>
	<%= f.text_field :title %><br />

	<%= f.label :body, "Body:" %>
	<%= f.text_field :body %><br />

	<%= f.label :budgeted_time, "Budgeted time:" %>
	<%= f.text_field :budgeted_time %><br />

	<%= f.label :priority, "Priority:" %>
	<%= f.text_field :priority %><br />

	<%= f.submit %>	
<% end %>
 
<%= link_to 'Back', issue_path %>