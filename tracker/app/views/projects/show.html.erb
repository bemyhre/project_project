<h2><%="PROJECT: #{@project.name}"%></h2>

<p><%=@project.description%><p>

<%= link_to 'Back to Client', clients_path %>
<%if current_user %>
	<%= link_to ' Edit Project', edit_client_project_path(@client,@project)%>
	<%= link_to ' Add Deliverable', new_project_deliverable_path(@project)%>
<%end%>

<h2>Deliverables</h2>

<ul>
	<% @project.deliverables.each do |deliverable| %>
		<li>
			<tr>
				<td><%="#{deliverable.name} "%></td>
				<td><%="#{deliverable.description} "%></td>
				<td><%= link_to ' Deliverable Details', deliverable_path(deliverable)%></td>
				<%if current_user %>
		    		<td><%= link_to ' Edit Deliverables', edit_deliverable_path(deliverable)%></td>
	    		<%end%>

			</tr>
		</li>	
	<%end%>
</ul>

